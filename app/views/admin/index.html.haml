.col
  .row.justify-content-center
    #Admin-Panel.col-10.card.p-4.text-center.profile-border-shadow
      %h3.pb-4 Panel Administrativo
      .row.border.border-light
        #Roles.col.profile-border-shadow.rounded.mr-3.border.border-light.pb-2.pt-2
          = fa_icon "user", class: "fa-7em text-primary pb-2"
          %h2
            = @roles.length
          = link_to 'Roles', roles_path, class: 'text-white btn btn-success col'
        #Levels.col.profile-border-shadow.rounded.mr-3.border.border-light.pb-2.pt-2
          = fa_icon "signal", class: "fa-7em text-primary pb-2"
          %h2
            = @levels.length
          = link_to 'Niveles', levels_path, class: 'text-white btn btn-success col'
        #Skills.col.profile-border-shadow.rounded.border.border-light.pb-2.pt-2
          = fa_icon "puzzle-piece", class: "fa-7em text-primary pb-2"
          %h2
            = @skills.length
          = link_to 'Habilidades', skills_path, class: 'text-white btn btn-success col'
