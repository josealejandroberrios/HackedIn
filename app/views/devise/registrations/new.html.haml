.col-12
  .row.justify-content-center
    .col-4
      .card.p-4.profile-border-shadow.mb-4
        %p.text-1st-font.bold.text-center.mb-4 Registro de Usuarios
        = form_for(:user, as: :user, url: user_registration_path) do |f|
          -# = devise_error_messages!
          .form-group
            = f.label 'Nombre', class: "text-3rd-font bold"
            = f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Introduce tu(s) nombre(s)'
          .form-group
            = f.label 'Apellido', class: "text-3rd-font bold"
            = f.text_field :lastname, class: 'form-control', placeholder: 'Introduce tu(s) apellidos(s)'
          .form-group
            = f.label 'Email', class: "text-3rd-font bold"
            = f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: 'Introduce tu direccion de correo'
          .form-group
            = f.label 'Contraseña (6 Caracteres Minimo)', class: "text-3rd-font bold"
            = f.password_field :password, autocomplete: "off", class: 'form-control'
          .form-group
            = f.label 'Confirmacion de Contraseña', class: "text-3rd-font bold"
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
          .actions
            = f.submit "Registrarse", class: 'btn btn-success btn-block buttons-border'