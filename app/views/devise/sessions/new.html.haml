.col-sm-12
  .row.align-items-center
    .col-sm-2.text-center
      = image_tag 'logo.png', class: 'user-nbar-logo'
    .col-sm-5
    .col-sm-5
      = form_for(:user, url: new_user_session_path(@user)) do |f|
        .row
          .col-sm-4
            .field
              -# = f.label 'Correo'
              = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'form-control'
          .col-sm-4
            .field
              -# = f.label 'Contraseña'
              = f.password_field :password, autocomplete: "off", placeholder: "Contraseña", class: 'form-control'
          .col-sm-4
            .actions
              = f.submit "Log in", class: 'btn btn-success btn-block'
