.col
  .row
    .col-2.text-center
      = image_tag 'logo.png', class: 'user-nbar-logo'
    .col-4
    .col-6 
      = form_for(:user, url: new_user_session_path(@user)) do |f|
        .row.justify-content-center.pt-3
          .col-5.text-center
            .field
              = f.label 'Correo'
              = f.email_field :email, autofocus: true, autocomplete: "email"
          .col-5.text-center
            .field
              = f.label 'Contrase√±a'
              = f.password_field :password, autocomplete: "off"  
          .col-2
            .actions
              = f.submit "Log in", class: 'btn btn-success btn-block'
