.col
  .row
    #List-Educations.col-10
      %h3 
        %ins Formaci√≥n
    .col-2.text-center
      - if user_signed_in?
        - if @profile.user_id === current_user.id
          = link_to new_profile_education_path(@profile) do
            = fa_icon "plus-circle", class: "fa-2x text-success" 
  - if @profile.educations.empty?
    .col
  - else
    .row.ml-5.mt-4.mr-5 
      - @profile.educations.each do |education|
        #Education.col-10
          .row
            .col
              %h5
                %strong
                  = education.place
          .row
            .col
              %h6
                = education.qualification
          .row
            .col
              %h6
                = education.discipline
          .row
            .col
              %p
                %small
                  = "#{education.start_date} al #{education.finish_date}"
              %hr/
        .col-2
          .row
            - if user_signed_in?
              - if @profile.user_id === current_user.id
                .col-6.text-right
                  = link_to edit_profile_education_path(@profile, education) do
                    = fa_icon "pencil", class: "fa-lg text-secondary"
                .col-6.text-right
                  = link_to "" do
                    = fa_icon "trash", class: "fa-lg text-danger"