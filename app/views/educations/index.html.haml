      - if user_signed_in?
        - if @profile.user_id === current_user.id
          %button.btn.btn-success
            = link_to 'Nuevo', new_profile_education_path(@profile), class: 'text-white'
      - if @profile.educations.empty?
        .col
      - else
        - @profile.educations.each do |education|
          .row
            #Education.col-10
              .row
                .col
                  %h5
                    = education.place
              .row
                .col
                  %h5
                    = education.qualification
              .row
                .col
                  %h5
                    = education.discipline
              .row
                .col
                  %h5
                    = "#{education.start_date} al #{education.finish_date}"
                  %hr/
            - if user_signed_in?
              - if @profile.user_id === current_user.id
                .col-2
                  .row
                    .col
