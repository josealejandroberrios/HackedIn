= form_for [:profile, @job] do |f|  
  .form-group.was-validated
    = f.label 'Compañia', class: "text-3rd-font bold"
    = f.text_field :company, class: 'form-control', placeholder: 'Introduce la compañia donde laboraste', required: true
    .invalid-feedback
      Falta completar este campo
    .valid-feedback
      Listo
  .form-group.was-validated
    = f.label 'Cargo', class: "text-3rd-font bold"
    = f.text_field :position, class: 'form-control', placeholder: 'Introduce el ultimo cargo ocupado', required: true
    .invalid-feedback
      Falta completar este campo
    .valid-feedback
      Listo
  .form-group.was-validated
    = f.label 'Descripción', class: "text-3rd-font bold"
    = f.text_area :description, class: 'form-control', cols: 30, rows: 6, placeholder: 'Introduce un breve descripción', required: true
    .invalid-feedback
      Falta completar este campo
    .valid-feedback
      Listo
  .form-group.was-validated
    = f.label 'Desde el Año', class: "text-3rd-font bold"
    = f.date_field :start_date, class: 'form-control', required: true
    .invalid-feedback
      Falta completar este campo
    .valid-feedback
      Listo
  .form-group.was-validated
    = f.label 'Hasta el Año', class: "text-3rd-font bold"
    = f.date_field :finish_date, class: 'form-control', required: true
    .invalid-feedback
      Falta completar este campo
    .valid-feedback
      Listo
  .actions
    .row.mt-4
      .col-3
        = f.submit 'Guardar', class: 'btn btn-success buttons-border'
      .col-3
        = link_to 'Cancelar', profile_path(params[:profile_id]), class: "btn cancel-button buttons-border"