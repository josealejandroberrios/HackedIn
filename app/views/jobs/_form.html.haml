    - if @job.errors[:description].any?
      .text-danger 
        = @job.errors[:description].to_s[/\w([^"]*)/]
  .form-group
    = f.label 'Desde el A침o', class: "text-3rd-font bold"
    = f.date_field :start_date, class: 'form-control'
    - if @job.errors[:start_date].any?
      .text-danger 
        = @job.errors[:start_date].to_s[/\w([^"]*)/]
  .form-group
    = f.label 'Hasta el A침o', class: "text-3rd-font bold"
