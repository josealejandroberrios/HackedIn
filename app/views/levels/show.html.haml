.col
  .row
    #List-Skills.col-10
      %h3 
        %ins Nivel
    .col-2.text-center
      - if user_signed_in?
        - if @profile.user_id === current_user.id
          = link_to edit_level_profile_path(@profile) do
            = fa_icon "pencil", class: "fa-2x text-secondary"
      -### pinta el nivel seleccionado mas los anteriores
  .row
    .col.ml-5.mt-4.mr-5
      .row
        - @levels.each do |level|
          - if level.id < @profile.level_id
            .col-5.card.mb-3.ml-2
              %p.text-center
                = level.name
              %hr.line-border-shadow.mt-0/
              %strong.badge Descripcion Positiva:
              = sanitize(level.positive_description).html_safe
        .col-5.card.mb-3.ml-2
          %p.text-center
            = @profile.level.name
          %hr.line-border-shadow.mt-0/
          %strong.badge Descripcion Positiva: 
          = sanitize(@profile.level.positive_description).html_safe
          %hr.line-border-shadow/
          %strong.badge Descripcion Negativa:
          = sanitize(@profile.level.negative_description).html_safe