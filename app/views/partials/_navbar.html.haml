- if user_signed_in?
  #Nav.col
    .row
      .col-2.mt-1
        = image_tag 'logo.png', class: 'user-nbar-logo'
      .col-4
        = form_tag  class: 'form-inline' do
          = text_field_tag  class: 'flex-2 form-control mr-2', placeholder: 'Busqueda de empleados'
          = button_tag(type: "submit", class: "btn btn-primary my-2") do
            %p.m-0 buscar 
            -#^aqui ^
      -if current_user.role.name != 'ADMINISTRADOR' 
        .col-3.mt-3
          %button.btn.btn-primary.position-absolute.rounded-circle
            = link_to profile_path(current_user.profile) do
              %h6.text-white.m-0
                = "#{current_user.name.first.upcase}"
          
          = link_to profile_path(current_user.profile), class:"card-header ml-3 pt-2 " do

            %span.badge.text-dark
              = "#{current_user.name.titleize} #{current_user.lastname.titleize}"
      - else
        .col-3
          %button.btn.btn-primary
            = link_to profile_path(current_user) do
              %h6.text-white
                = "#{current_user.name.first.upcase}"
              %span.badge.text-white
                = "#{current_user.name.titleize} #{current_user.lastname.titleize}"
      .col-3.mt-3
        %button.btn.btn-danger
          = link_to "Cerrar Sesion", destroy_user_session_path, method: :delete, class: 'text-white'
- else
     