= form_for(@profile) do |f|
  - if @profile.errors.any?
    #error_explanation
      %h2
        = "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being save:"
      %ul
        - @profile.error.full_messages.each do |message|
          %li
            = message
  .form-group
    = f.label 'Avatar'
    = f.text_field :avatar, class: 'form-control'
  .form-group
    = f.label 'Descripcion'
    = f.text_field :about, class: 'form-control'
  .form-group
    = f.label 'Pais'
    = f.text_field :country, class: 'form-control'
  .actions
    = f.submit "Guardar", class: 'btn btn-success btn-block'  