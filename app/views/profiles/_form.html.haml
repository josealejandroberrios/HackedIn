= form_for(@profile) do |f|
  .form-group
    = f.file_field :avatar, class: 'form-control'
  .form-group
    = f.label 'Pais'
    = f.text_field :country, class: 'form-control'
    - if @profile.errors[:country].any?
      .text-danger 
        = @profile.errors[:country].to_s[/\w([^"]*)/]
  .form-group
    = f.label 'Descripcion'
    = f.text_area :about, class: 'form-control'
    - if @profile.errors[:about].any?
      .text-danger 
        = @profile.errors[:about].to_s[/\w([^"]*)/]
  .form-group
    = f.label 'Selecione el Nivel'
    .row
      - @levels.each do |level|
        .col
          .row
            .col
              = f.radio_button :level_id, level.id
          .row
            .col
              = f.label "#{level.name}"
          .row
            .col
              = f.label "#{level.positive_description}"
          .row
            .col
              = f.label "#{level.negative_description}"
  .actions
    = f.submit "Guardar", class: 'btn btn-success btn-block'