= form_for [:profile, @repository] do |f|
  .form-group.was-validated
    = f.label 'Link', class: "text-3rd-font bold"
    = f.text_field :link, class: 'form-control', required: true, placeholder: 'Introduzca el link de tu repositorio'
    .invalid-feedback
      Falta completar este campo
    .valid-feedback
      Listo
  .actions
    .row.mt-4
      .col-3
        = f.submit 'Guardar', class: 'btn btn-success buttons-border'
      .col-3
        = link_to 'Cancelar', profile_path(params[:profile_id]), class: "btn cancel-button buttons-border"