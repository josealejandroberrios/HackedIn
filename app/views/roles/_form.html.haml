= form_for @role do |f|
  - if @role.errors.any?
    #error_explanation
      %h2
        = "#{pluralize(@role.errors.count, "error")} prohibited this role from being save:"
      %ul
        - @role.error.full_messages.each do |message|
          %li
            = message
    
  .form-group
    = f.label 'Nombre'
    = f.text_field :name, class: 'form-control'
  .actions
    = f.submit 'Guardar', class: 'btn btn-success btn-block text-white'