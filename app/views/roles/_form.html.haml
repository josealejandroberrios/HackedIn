= form_for @role do |f|
  .form-group
    = f.label 'Nombre', class: 'control-label'
    = f.text_field :name, class: 'form-control'
    - if @role.errors[:name].any?
      .text-danger 
        = @role.errors[:name].to_s[/\w([^"]*)/]
  .actions
    = f.submit 'Guardar', class: 'btn btn-success text-white'